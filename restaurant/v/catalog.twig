<div class="cards cards-menu">
	<div class="card">
    {% if goods %}
        {% for good in goods %}
	    <img src="img/pizza-plus/{{pizza.img}}" alt="image" class="card-image" />
		<div class="card-text">
			<div class="card-heading">
				<h3 class="card-title card-title-reg">{{pizza.name}}</h3>
			</div>
		    <div class="card-info">
				<div class="ingredients">{{pizza.description}}</div>
		</div>
		<div class="card-buttons">
			<button class="button button-primary button-add-cart">
				<span class="button-card-text"{{pizza.id}}>В корзину</span>
				<span class="button-cart-svg"></span>
			</button>
			<strong class="card-price-bold">{{pizza.price}}</strong>
		</div>
	</div>
</div>
